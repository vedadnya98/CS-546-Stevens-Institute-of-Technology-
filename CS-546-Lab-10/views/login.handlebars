<title>{{title}}</title>
<h2>Login</h2>
<p>Enter your login credentials</p>

        <form action="/login" class="search-form" id="login-form" method="post">
        <label for="username">Please enter your username</label>
        <input id="username" type="text" name="username" class="search_box" required/>
        <br>
        <label for="password">Please enter your password</label>
        <input type="password" class="search_box" id="password" name="password" required/>
        <br>
        <button type="submit" class="submit_button" >Login</button>
        </form>

<p>{{error}}</p> 
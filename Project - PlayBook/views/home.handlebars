<div class="parallax-container">
  <div class="parallax">
    <img src="/public/basketball-wallpaper-ultra-hd-4k-156530.jpg"></img>
  </div>
  <div class="section no-pad-bot">
    <div class="container">
      <br><br>
      {{#if userNotLogged}}
      <h1 class="header center #fafafa grey-text text-lighten-5">Hello Stranger!</h1>
      {{/if}}
      {{#if userLogged}}
      <h1 class="header center #fafafa grey-text text-lighten-5">Hello {{firstName}}</h1>
      {{/if}}
